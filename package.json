{
  "name": "@energiency/chartjs-plugin-piechart-outlabels",
  "homepage": "http://www.chartjs.org",
  "description": "Chart.js plugin to display float data labels on pie/doughnut chart outside the border.",
  "version": "1.3.2",
  "license": "MIT",
  "main": "dist/chartjs-plugin-piechart-outlabels.js",
  "module": "dist/chartjs-plugin-piechart-outlabels.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/energiency/chartjs-plugin-piechart-outlabels"
  },
  "types": "dist/types",
  "files": [
    "dist/*.js",
    "dist/*.ts"
  ],
  "scripts": {
    "cleanup": "rm -rf build",
    "build": "tsc --outDir build && rollup -c && tsc --emitDeclarationOnly && yarn run cleanup",
    "build:dev": "tsc --outDir build && rollup -c --watch",
    "lint": "eslint . --ext .js,.ts --cache"
  },
  "resolutions": {
    "graceful-fs": "^4.2.9"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "chart.js": "^4.4.2",
    "eslint": "^7.29.0",
    "eslint-config-chartjs": "^0.3.0",
    "eslint-plugin-es": "^4.1.0",
    "gitbook-cli": "^2.3.2",
    "rollup": "^2.52.6",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-istanbul": "^3.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^19.0.3"
  },
  "peerDependencies": {
    "chart.js": "> 3"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "master",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
